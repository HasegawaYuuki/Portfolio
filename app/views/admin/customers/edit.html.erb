<!--管理者側／会員情報編集画面-->
<div class="container mt-5 py-5">
  <div class="row mx-auto">
    <div class="col-md-6 offset-3">
      <div class="card p-5">
      <h3><%= @customer.name %>さんの会員情報編集　</h3>

        <!--会員情報更新失敗のエラーメッセージ-->
        <% if @customer.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <% @customer.errors.full_messages.each do |message| %>
              <p><%= message %></p>
            <% end %>
          </div>
        <% end %>

        <!--会員情報編集フォーム-->
        <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
          <table>
            <tbody>
              <tr>
                <td class="p-1">会員ID</td>
                <td class="p-1"><%= @customer.id %></td>
              </tr>
              <tr>
                <td class="p-1">ユーザー名</td>
                <td class="p-1"><%= @customer.name %></td>
              </tr>
              <tr>
                <td class="p-1">メールアドレス</td>
                <td class="p-1"><%= @customer.email %></td>
              </tr>
              <tr>
                <td class="p-1">会員ステータス</td>
                <td class="p-1">
                  <%= f.radio_button :is_active, true %>
      　           <%= f.label :is_active_true, "有効" %>
      　           <%= f.radio_button :is_active, false %>
      　           <%= f.label :is_active_false,"退会" %>
    　          </td>
              </tr>
              <tr>
                <td class="p-2"><%= f.submit "変更を保存", class:"btn btn-outline-success" %></td>
              </tr>
            </tbody>
          </table>
        <% end %>

      </div>
    </div>
  </div>
</div>