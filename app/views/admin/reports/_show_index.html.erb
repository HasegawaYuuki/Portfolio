<section class="review-show-bottom">
  <div class="card">
    <div class="card-header">
      <h6>報告一覧  <%= review.reports.count %>件</h6>
    </div>
    <ul class="list-group list-group-flush">
      <% review.reports.each do |report| %>
        <li class="list-group-item">
          <section class="review-show-top">
            <div class="flex-row">
              <div class="review-show-left">
                <%= report.id %>
              </div>

              <div class="report-show-right ml-3">
                <%= image_tag report.customer.get_image(50,50) %>
                <br />
                <%= report.customer.name %>
              </div>

              <div class="report-show-right ml-5">
                <%= report.report %>
              </div>

              <div class="report-show-right ml-5">
                <%= link_to edit_admin_report_path(report.id) do %>
                  <%= report.report_status_i18n %>
                <% end %>
              </div>
            </div>
          </section>
        </li>
      <% end %>
    </ul>
  </div>
</section>


