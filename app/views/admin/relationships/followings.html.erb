<h2><%= @customer.name %>さんのフォロー一覧</h2>
<% if @customers.exists? %>
  <table class='table'>
    <thead>
      <tr>
        <th>Image</th>
        <th>name</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td>
            <%= link_to admin_customer_path(customer) do %>
              <%= image_tag customer.get_image(50,50) %>
            <% end %>
          </td>
          <td><%= customer.name %></td>
          <td>
            <%= link_to followings_admin_relationship_pathh(customer) do %>
              <h6>フォロー<%= customer.followings.count %></h6>
            <% end %>
          </td>
          <td>
            <%= link_to followers_admin_relationship_pathh(customer) do %>
              <h6>フォロワー<%= customer.followers.count %></h6>
            <% end %>
          </td>
          <td>
            <%= link_to "show", admin_customer_path(customer.id) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>フォローしているユーザーはいません</p>
<% end %>