<p>コメント一覧  <%= review.review_comments.count %>件</p>
  <section>
    <% review.review_comments.each do |review_comment| %>
      <div class="flex-row">
        <div class="flex-comment">
          <%= image_tag review_comment.customer.get_image(50,50) %><br />
          <%= review_comment.customer.name %>
        </div>
        <div class="flex-comment">
          <%= review_comment.comment %>
        </div>
        <div class="flex-comment">
          <div id="review_comment">
            <% if review_comment.customer == current_customer %>
              <%= link_to "削除", review_review_comment_path(review, review_comment), method: :delete, "data-confirm" => "本当に消しますか？",class:"btn btn-danger", remote:true, data: {"turbolinks" => false}  %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </section>
