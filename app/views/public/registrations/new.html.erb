<div class="container">
  <div class="row">
    <div class="col-12 offset-lg-3 col-lg-6">
      <div class="card border-info shadow p-3 mb-5 bg-body-tertiary rounded mx-auto mt-5">

        <h2>新規登録</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

          <div class="field mt-3">
            <%= f.label :"メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field mt-3">
            <%= f.label :"ユーザー名" %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          </div>

          <div class="field mt-3">
            <%= f.label :"パスワード" %>
            <% if @minimum_password_length %>
            (<%= @minimum_password_length %>文字以上のパスワードを入力してください)
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field mt-3">
            <%= f.label :"パスワード(確認のため再度パスワードを入力してください)" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions mt-3">
            <%= f.submit "新規登録", class: "btn btn-outline-success" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>