<%= form_with model: review do |f| %>
  <label>公演名</label>
  <%= f.text_field :title, class: 'form-control review_title' %>
  <label>サブタイトル</label>
  <%= f.text_field :sub_title, class: 'form-control review_sub_title' %>
  <label>感想</label>
  <%= f.text_field :body, class: 'form-control review_body' %>
  <label>会場名</label>
  <%= f.text_field :venue_name, class: 'form-control review_venue_name' %>
  <label>タグ(,で区切ると複数タグ登録できます)</label>
  <%= f.text_field :name,value: tag_list, class: 'form-control review_tag' %>
  <% if review.new_record? %>
    <%= f.submit '新規作成', class: "btn btn-success mt-4" %>
  <% else %>
    <%= f.submit '更新する', class: "btn btn-success mt-4" %>
  <% end %>
<% end %>