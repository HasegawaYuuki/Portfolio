<%= form_with model: review, html: { multipart: true } do |f| %>

  <label>公演名</label>
  <%= f.text_field :title, class: 'form-control review_title' %>

  <label>サブタイトル</label>
  <%= f.text_field :sub_title, class: 'form-control review_sub_title' %>

  <label>感想</label>
  <%= f.text_area :body, class: 'form-control review_body', rows: '6' %>

  <label>会場名</label>
  <%= f.text_field :venue_name, class: 'form-control review_venue_name' %>

  <label>公演日時</label>
  <%= f.date_field :date, class: 'form-control review_date' %>
  <%= f.time_field :time, class: 'form-control review_time' %>

  <label>タグ(,で区切ると複数タグ登録できます)</label>
  <%= f.text_field :tag_id,value: tag_list, class: 'form-control review_tag' %>

  <label>画像</label>
  <br />
  <%= f.file_field :review_images, accept: "image/*", multiple: true %>
  <br />

  <label>ネタバレ有無・下書き</label>
  <br />
  <%= f.radio_button :status, Review.statuses.key(0) %>
  <%= f.label :status, Review.statuses_i18n[:spoiler_not], value: Review.statuses.key(0) %>
  <%= f.radio_button :status, Review.statuses.key(1) %>
  <%= f.label :status, Review.statuses_i18n[:spoiler], value: Review.statuses.key(1) %>
  <%= f.radio_button :status, Review.statuses.key(2) %>
  <%= f.label :status, Review.statuses_i18n[:draft], value: Review.statuses.key(2) %>

  <br />

  <% if review.new_record? %>
    <%= f.submit '新規作成', class: "btn btn-outline-success mt-4" %>
  <% else %>
    <%= f.submit '更新する', class: "btn btn-outline-success mt-4" %>
  <% end %>

<% end %>