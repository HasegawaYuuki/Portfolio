<!--ネタバレなし @not_spoiler_review = @customer.reviews.where(status: :not_spoiler)-->

<div class="row row-cols-4">
  <% not_spoiler_review.each do |not_spoiler_review| %>
    <div class="col mb-4">
      <div class="card-deck">
        <div class="card">
          <div class="card-header">
            <%= link_to customer_path(not_spoiler_review.customer.id) do %>
              <%= image_tag not_spoiler_review.customer.get_image(80,80) %>
              <%= not_spoiler_review.customer.name %>
            <% end %>
          </div>
            <%# if not_spoiler_review.review_image.attached? %>
              <%#= image_tag not_spoiler_review.review_image.first.variant(resize: '50x50') %>
            <%# end %>
          <div class="card-title text-center">
            <%= link_to review_path(not_spoiler_review.id) do %>
              <h5><%= not_spoiler_review.title %><%= not_spoiler_review.sub_title %></h5>
            <% end %>
          </div>
          
          <div class="card-body">
            <%= not_spoiler_review.body.truncate(35) %>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">会場名：<%= not_spoiler_review.venue_name %></li>
            <li class="list-group-item">公演日：<%= not_spoiler_review.date.strftime('%Y/%m/%d') %></li>
            <li class="list-group-item">開演時間：<%= not_spoiler_review.time.strftime('%H:%M') %></li>
          </ul>

          <div class="card-body">
            <%= render "public/favorites/view", review: not_spoiler_review %>
            <i class="fa-solid fa-tag"></i>
            <%= not_spoiler_review.tags.map(&:name).join(', ') %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
