<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h3>投稿詳細</h3>


        <%= image_tag @customer.get_image(80,80) %><br />
        <%= @customer.name %><br />
        <%= link_to "投稿編集", edit_review_path(@review.id), class:"btn btn-outline-success" %><br />
        <%= link_to "投稿削除", review_path, method: :delete, "data-confirm" => "本当に消しますか？",class:"btn btn-outline-danger" %>
        <%= @review.status_i18n %>
        <% if @review.review_image.attached? %>
          <% @review.review_image.each do |review_image| %>
            <%= image_tag @review.review_image.first.variant(resize: '200x150') %>
          <% end %>
        <% end %>
        <%= @review.title %>
        <%= @review.sub_title %>
        <%= @review.body %>
        <%= @review.venue_name %>
        <% @tags.each do |tag| %>
          <i class="fa-solid fa-tag"><%=tag.name%><%="(#{tag.reviews.count})" %></i>
        <% end %>
        <div id="favorite_btn_<%= @review.id %>">
          <%= render "public/favorites/btn", review: @review %>

      <div id="review_comment">
        <%= render "public/review_comments/comment", review: @review %>
      </div>
      <%= render "public/review_comments/form", review: @review, review_comment: @review_comment %>

    </div>
  </div>
</div>