<h2>フォロー一覧</h2>
<% if @customers.exists? %>
  <table class='table'>
    <thead>
      <tr>
        <th>Image</th>
        <th>name</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td>
            <%= link_to customer_path(customer) do %>
              <%= image_tag customer.get_image(50,50) %>
            <% end %>
          </td>
          <td><%= customer.name %></td>
          <td>
            <%= link_to customer_followings_path(user) do %>
              <h6>フォロー<%= customer.follow.count %></h6>
            <% end %>
          </td>
          <td>
            <%= link_to customer_followers_path(customer) do %>
              <h6>フォロワー<%= customer.follower.count %></h6>
            <% end %>
          </td>
          <td>
            <%= link_to "show", customer_path(customer.id) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>