<div class="container">
  <div class="row">
    <div class="col">

      <div class="tabs d-flex justify-content-between align-items-center">
        <ul class="nav nav-tabs">
          <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#published">ネタバレなし</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#draft">ネタバレあり</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#unpublished">下書き</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#unpublished">非公開</a>
          </li>
        </ul>
      </div>

      <div class="tab-content">

        <div id="published" class="tab-pane fade show active">
          <%# @published_posts.each do |post| %>
            <%#= render "mypost", post: post %>
          <%# end %>
        </div>

        <div id="draft" class="tab-pane fade">
          <%# @draft_posts.each do |post| %>
            <%#= render "mypost", post: post %>
          <%# end %>
        </div>

        <div id="unpublished" class="tab-pane fade">
          <%# @unpublished_posts.each do |post| %>
            <%#= render "mypost", post: post %>
          <%# end %>
        </div>

      </div>

    </div>
  </div>
</div>