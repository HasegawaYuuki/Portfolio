<div class="container">
  <div class="row">
    <div class="col">
      <div class="card border-info shadow p-3 mb-5 bg-body-tertiary rounded mx-auto mt-5" style="width: 500px;">

        <h2>会員情報編集</h2>

        <%= form_with model: @customer, url: customer_path, method: :patch do |f| %>

          <div class="field mt-3">
            <%= f.label :"メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field mt-3">
            <%= f.label :"ユーザー名" %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          </div>

          <div class="field mt-3">
            <%= f.label :"ユーザー画像" %><br />
            <%= f.file_field :image, accept: "image/*", autofocus: true, autocomplete: "image" %>
          </div>

          <div class="field mt-3">
            <%= f.label :"自己紹介文" %><br />
            <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
          </div>

          <div class="field mt-3">
            <%= f.submit "編集内容を保存", class: "btn btn-outline-success" %>
          </div>

          <div class="field mt-3">
            <%= link_to "退会する", customers_check_path, class:"btn btn-outline-danger" %>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>