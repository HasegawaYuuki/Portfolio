<div class="container">
  <div class="row mt-5">
    <div class="col-12 offset-lg-3 col-lg-6">
      <div class="card input-card shadow p-3 mb-5 bg-body-tertiary rounded mx-auto">

        <h2>会員情報編集</h2>

        <%= form_with model: @customer, url: customer_path, method: :patch do |f| %>

          <div class="field mt-3">
            <label>メールアドレス</label><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field mt-3">
            <label>ユーザー名</label><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          </div>

          <div class="field mt-3">
            <label>ユーザー画像</label><br />
            <%= f.file_field :image, accept: "image/*", autofocus: true, autocomplete: "image" %>
          </div>

          <div class="field mt-3">
            <label>自己紹介文</label><br />
            <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", rows: '6', style: "width:90%" %>
          </div>

          <div class="field mt-3">
            <%= f.submit "編集内容を保存", class: "btn btn-outline-success" %>
          </div>

          <div class="field mt-3">
            <%= link_to "退会する", customers_check_path, class:"btn btn-outline-danger" %>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>